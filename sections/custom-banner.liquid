    <script>
        function initBannerToggle(section) {
            const drop = section.querySelector(".drop");
            const cross = section.querySelector(".cross");
            const head = section.querySelector(".head");

            if (!drop || !head || !cross) return;

            // Reset duplicate listeners
            const newDrop = drop.cloneNode(true);
            const newCross = cross.cloneNode(true);
            drop.parentNode.replaceChild(newDrop, drop);
            cross.parentNode.replaceChild(newCross, cross);

            // Open on drop click
            newDrop.addEventListener("click", () => {
                head.classList.add("active");
            });

            // Close on cross click
            newCross.addEventListener("click", () => {
                head.classList.remove("active");
            });
        }

        document.addEventListener("shopify:section:load", (event) => {
            initBannerToggle(event.target);
        });

        document.addEventListener("DOMContentLoaded", () => {
            const section = document.querySelector(".custom-banner-wrapper");
            if (section) initBannerToggle(section);
        });
    </script>